@using BookStore.Core.Enums
@model BookQueryServiceModel
@inject IBookService bookService
@{
    ViewBag.Title = "All Books";
}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-2 bg-light">
            <div class="input-group">
                <select class="form-select" name="sort">
                    @foreach (BookSorting option in Enum.GetValues(typeof(BookSorting)))
                    {
                        <a asp-controller="Book" asp-action="Filtered" asp-route-id="@option">
                        <option value="@option">@option</option></a>
                    }
                </select>
                <button class="btn btn-outline-secondary" type="submit">Sort</button>
            </div>
            <h3>Genres</h3>
            <div class="sidebar">
                @foreach (var genre in await bookService.AllGenresAsync())
                {
                    <a asp-controller="Book" asp-action="Filtered" asp-route-id="@genre.Id">
                    <div class="sidebar-item">
                        @genre.Name
                    </div></a>
                }
            </div>
        </div>
        <!-- Main Content -->
        <div class="col-lg-10">
            <h1>Items Grid</h1>
            <div class="row">
                @foreach (var book in Model.Books)
                {
                    <partial name="_BookPartial" model="@book" />
                }
            </div>
        </div>
    </div>
</div>