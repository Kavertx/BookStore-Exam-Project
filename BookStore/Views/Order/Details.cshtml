@model OrderViewModel
@{
    ViewBag.Title = "Order Information";
}
<h2>@ViewBag.Title</h2>
<table class="table">
    <thead>
        <tr>
            <th>Cover</th>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <!-- Add more columns as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>

                <td><a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id">
                    <img src="@book.ImageUrl" class="card-img-top small-image" alt="Book Image"></a>
                </td>
                <td><a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id">
                    @book.Title</a>
                    </td>
                <td>@book.Author</td>
                <td>$@book.Price</td>
            </tr>
        }
    </tbody>
