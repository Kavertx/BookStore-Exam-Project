@model IEnumerable<OrderViewModel>
@{
    ViewBag.Title = "My Orders";
}

<h2>@ViewBag.Title</h2>
@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Total Price</th>
                <th>Number of books ordered</th>
                <th>Time of order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.TotalPrice</td>
                    <td>@order.BooksOrdered</td>
                    <td>@order.TimeOfOrder.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Your cart is empty.</p>
}